{
  "name": "metacore-stack-dashboard",
  "version": "1.0.0",
  "private": true,
  "description": "Dashboard and Integration API for Metacore Stack",
  "scripts": {
    "api:dev": "cd tools/integration-api && npm run dev",
    "dashboard:dev": "cd apps/operator-dashboard && npm run dev",
    "dev:parallel": "npm-run-all --parallel api:dev dashboard:dev",
    "install:all": "npm install && cd tools/integration-api && npm install && cd ../../apps/operator-dashboard && npm install",
    "build:api": "cd tools/integration-api && npm run build",
    "build:dashboard": "cd apps/operator-dashboard && npm run build",
    "build:all": "npm run build:api && npm run build:dashboard",
    "build": "npm run build:all",
    "typecheck:api": "cd tools/integration-api && npm run type-check",
    "typecheck:dashboard": "cd apps/operator-dashboard && npm run type-check",
    "typecheck:all": "npm run typecheck:api && npm run typecheck:dashboard",
    "typecheck": "npm run typecheck:all",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "npm run test:schemas && npm run test:contracts",
    "test:schemas": "cd schemas && npm run validate",
    "test:contracts": "node scripts/validate-contracts.mjs",
    "test:smoke": "node tests/smoke/smoke.test.mjs",
    "test:contract": "node tests/contract/contract.test.mjs",
    "test:e2e": "node tests/e2e/basic-flow.test.mjs",
    "test:all": "npm run test:smoke && npm run test:contract && npm test",
    "smoke:stream": "node scripts/smoke-stream-test.mjs",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "prepare": "husky",
    "commit": "cz",
    "security:audit": "node scripts/security-audit.mjs",
    "agent:update": "node scripts/agent-update.mjs",
    "report:test": "node scripts/generate-test-report.mjs",
    "report:quality": "node scripts/generate-quality-report.mjs"
  },
  "keywords": [
    "dashboard",
    "integration",
    "monitoring",
    "observability"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.38.0",
    "eventsource": "^4.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0"
  }
}
