{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metacore-stack.local/schemas/commands.catalog.schema.json",
  "title": "Commands Catalog Schema",
  "description": "Schema para o catálogo de comandos disponíveis no sistema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Versão do catálogo de comandos (formato semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "commands": {
      "type": "array",
      "description": "Lista de comandos disponíveis no sistema",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do comando",
            "examples": ["room.create", "entity.spawn", "entity.move"]
          },
          "description": {
            "type": "string",
            "description": "Descrição do que o comando faz"
          },
          "params": {
            "type": "object",
            "description": "Schema JSON dos parâmetros aceitos pelo comando",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["object"]
              },
              "properties": {
                "type": "object"
              },
              "required": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "category": {
            "type": "string",
            "description": "Categoria do comando",
            "examples": ["room", "entity", "system"]
          }
        },
        "required": ["name", "description"]
      }
    }
  },
  "required": ["version", "commands"]
}
