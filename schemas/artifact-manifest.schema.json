{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "artifact-manifest.schema.json",
  "type": "object",
  "required": ["name", "type", "path", "sha256", "origin", "ts"],
  "properties": {
    "name": { "type": "string" },
    "type": { "type": "string" },
    "path": { "type": "string" },
    "sha256": { "type": "string" },
    "origin": {
      "type": "object",
      "properties": {
        "room": { "type": "string" },
        "entity": { "type": "string" },
        "port": { "type": "string" }
      }
    },
    "version": { "type": "integer" },
    "ts": { "type": "string", "format": "date-time" }
  }
}
