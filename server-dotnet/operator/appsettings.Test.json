{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RoomServer": {
    "BaseUrl": "http://localhost:40801",
    "HubPath": "/hub"
  },
  "Auth": {
    "TokenType": "Bearer",
    "Token": "${ROOM_AUTH_TOKEN}",
    "RequiredScopes": [],
    "ValidateScopes": false
  },
  "Operator": {
    "Version": "1.0.0-test",
    "Features": {
      "Resources": true
    },
    "Reconciliation": {
      "IntervalSeconds": 5,
      "ParallelRooms": 1,
      "RateLimitPerSecond": 8,
      "StateConsistency": {
        "Mode": "active",
        "StaleTolerance": "5s",
        "ReadBeforeApply": true
      },
      "Guardrails": {
        "MaxEntitiesKickPerCycle": 5,
        "MaxArtifactsDeletePerCycle": 10,
        "ChangeThreshold": 0.5,
        "RequireConfirmHeader": false
      },
      "ConvergenceTracking": {
        "Enabled": true,
        "MaxCyclesUntilConverged": 10
      }
    },
    "Retry": {
      "MaxAttempts": 3,
      "InitialDelayMs": 100,
      "MaxDelayMs": 5000,
      "JitterFactor": 0.2
    }
  },
  "HttpApi": {
    "Port": 40802
  },
  "Mcp": {
    "Providers": [
      {
        "id": "example-mcp",
        "url": "ws://127.0.0.1:5099",
        "visibility": "room"
      }
    ]
  }
}
