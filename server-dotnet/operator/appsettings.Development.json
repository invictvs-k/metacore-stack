{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RoomServer": {
    "BaseUrl": "http://127.0.0.1:40801",
    "HubPath": "/hub"
  },
  "Auth": {
    "TokenType": "Bearer",
    "Token": "dev-token-operator",
    "RequiredScopes": [
      "room:entities:write",
      "room:artifacts:write",
      "room:policies:write",
      "room:resources:read"
    ],
    "ValidateScopes": false
  },
  "Operator": {
    "Version": "1.0.0-dev",
    "Features": {
      "Resources": false
    },
    "Reconciliation": {
      "IntervalSeconds": 5,
      "ParallelRooms": 1,
      "RateLimitPerSecond": 5,
      "StateConsistency": {
        "Mode": "active",
        "StaleTolerance": "10s",
        "ReadBeforeApply": true
      },
      "Guardrails": {
        "MaxEntitiesKickPerCycle": 5,
        "MaxArtifactsDeletePerCycle": 10,
        "ChangeThreshold": 0.5,
        "RequireConfirmHeader": false
      },
      "ConvergenceTracking": {
        "Enabled": true,
        "MaxCyclesUntilConverged": 10
      }
    },
    "Retry": {
      "MaxAttempts": 3,
      "InitialDelayMs": 100,
      "MaxDelayMs": 5000,
      "JitterFactor": 0.2
    }
  },
  "HttpApi": {
    "Port": 40802,
    "OperatorUrl": "http://127.0.0.1"
  },
  "Events": {
    "HeartbeatIntervalMs": 10000
  }
}
