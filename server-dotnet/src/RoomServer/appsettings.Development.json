{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "RoomServer.Services.Mcp": "Debug"
    }
  },
  "McpServers": [
    {
      "id": "web.search@local",
      "url": "ws://localhost:8081",
      "visibility": "room"
    },
    {
      "id": "http.request@local",
      "url": "ws://localhost:8082",
      "visibility": "room"
    }
  ],
  "McpDefaults": {
    "rateLimit": {
      "perMinute": 60
    },
    "scopes": ["net:*"],
    "allowedEntities": "public"
  }
}
